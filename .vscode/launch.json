{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug API",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/api",
            "env": {
                "PORT": "8080",
                "DB_DRIVER": "postgres",
                "DB_DSN": "postgres://pismo:pismo@localhost:5432/pismo?sslmode=disable",
                "LOG_LEVEL": "debug",
                "HTTP_TIMEOUT": "0"
            },
            "args": [],
            "showLog": true
        },
        {
            "name": "Debug Current File",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${file}"
        },
        {
            "name": "Debug Tests",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/...",
            "env": {
                "DB_DSN": "postgres://pismo:pismo@localhost:5432/pismo?sslmode=disable"
            }
        },
        {
            "name": "Attach to Process",
            "type": "go",
            "request": "attach",
            "mode": "local",
            "processId": 0
        }
    ]
}